<?xml version="1.0"?>
<ruleset name="quickstart"
         xmlns="http://pmd.sourceforge.net/ruleset/6.39.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/6.39.0 https://pmd.sourceforge.io/ruleset_6_39_0.xsd">


<include-pattern>./src/main/java/Player.java</include-pattern>


    <rule ref="category/java/codestyle.xml">
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="DefaultPackage"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="AtLeastOneConstructor"/>
    </rule>



    <rule ref="category/java/codestyle.xml/ClassNamingConventions">
    <properties>
        <property name="utilityClassPattern" value="[A-Z][a-zA-Z0-9]*" />
    </properties>
    </rule>

    <rule ref="category/java/errorprone.xml">
        <exclude name="EmptyCatchBlock"/>
        <exclude name="BeanMembersShouldSerialize"/>
    </rule>



</ruleset>